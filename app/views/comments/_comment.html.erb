<% show_post ||= false %>

<div class="well span8">
		<em>"<%= comment.body %>"</em>
		<% if show_post %>
			on <%= link_to comment.post.title, post_path(comment.post) %>
		<% end %>
			<span class='quiet'>posted by </span><%= link_to comment.user.username, user_path(comment.user.id) %>
			<small>at <%= fix_date_time(comment.created_at) %></small>
	</div>