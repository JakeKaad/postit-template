<div class='row'>
	<div class='span8 well'>
		<%= render post.categories %>
		<h6><%= link_to post.title, fix_url(post.url) %></h6>
		<p><%= post.description %></p>
		<p>
			<span class='quiet'>posted by </span><%= link_to post.user.username, user_path(post.user.id) %>
			<small>at <%= fix_date_time(post.created_at) %></small>
		</p>
		<small>
			<span>
				<%= link_to("#{post.comments.size} comments", post_path(post)) %>
			</span>
		</small>
	</div>
</div>